            </Canvas>
        </Viewbox>
        <StackPanel x:Name="menuStackPanel" Margin="0,45,0,0" Grid.Row="1">
            <RadioButton x:Uid="unreadItemsMenuButton" x:Name="unreadItemsMenuButton" Style="{StaticResource MenuButton}" IsChecked="True" Checked="unreadItemsMenuButton_Checked" Command="{Binding ShowUnreadItems}">
                <SymbolIcon Symbol="View" />
            </RadioButton>
            <RadioButton x:Uid="favouriteItemsMenuButton" x:Name="favouriteItemsMenuButton" Style="{StaticResource MenuButton}" Checked="favouriteItemsMenuButton_Checked" Command="{Binding ShowFavoriteItems}">
                <SymbolIcon Symbol="Favorite" />
            </RadioButton>
            <RadioButton x:Uid="archivedItemsMenuButton" x:Name="archivedItemsMenuButton" Style="{StaticResource MenuButton}" Checked="archivedItemsMenuButton_Checked" Command="{Binding ShowArchivedItems}">
                <SymbolIcon Symbol="Folder" />
            </RadioButton>
            <RadioButton x:Uid="tagsMenuButton" x:Name="tagsMenuButton" Style="{StaticResource MenuButton}" Checked="tagsMenuButton_Checked">
                <SymbolIcon Symbol="Tag" />
            </RadioButton>
        </StackPanel>
        <Rectangle Fill="#26858585" Grid.Column="1"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Grid.Column="1" Margin="0,0,20,0">
            <Button Style="{StaticResource RoundButtonStyle}" Command="{Binding CurrentItem.SwitchReadStatusCommand}">
                <SymbolIcon Symbol="Accept"/>
            </Button>
            <Button Style="{StaticResource RoundButtonStyle}" Command="{Binding CurrentItem.SwitchFavoriteStatusCommand}">
                <SymbolIcon Symbol="Favorite"/>
            </Button>
            <StackPanel x:Name="ItemCommands" Orientation="Horizontal" Width="0">
                <Button Style="{StaticResource RoundButtonStyle}" Command="{Binding DeleteCommand}">
                    <SymbolIcon Symbol="Delete"/>
                </Button>
                <Button Style="{StaticResource RoundButtonStyle}" IsEnabled="False">
                    <SymbolIcon Symbol="Edit"/>
                </Button>
                <Button Style="{StaticResource RoundButtonStyle}" IsEnabled="False">
                    <SymbolIcon Symbol="Tag"/>
                </Button>
                <Button x:Name="FullScreenButton" Style="{StaticResource RoundButtonStyle}" Click="FullScreenButton_Click">
                    <SymbolIcon Symbol="FullScreen"/>
                </Button>
            </StackPanel>
            <Button x:Name="ItemCommandsViewButton" Style="{StaticResource RoundButtonStyle}" RenderTransformOrigin="0.5,0.5" Click="ItemCommandsViewButton_Click">
                <Button.RenderTransform>
                    <CompositeTransform/>
                </Button.RenderTransform>
                <SymbolIcon Symbol="More"/>
            </Button>
            <Rectangle Width="2" Fill="{ThemeResource AccentBrush}" Margin="10,0"/>
            <Button Style="{StaticResource RoundButtonStyle}">
                <SymbolIcon Symbol="Add"/>
            </Button>
            <Button Style="{StaticResource RoundButtonStyle}" Command="{Binding RefreshCommand}">
                <SymbolIcon x:Name="symbolIcon" Symbol="Refresh" RenderTransformOrigin="0.51,0.55">
                    <SymbolIcon.RenderTransform>
                        <CompositeTransform/>
                    </SymbolIcon.RenderTransform>
                </SymbolIcon>
            </Button>
            <Button Style="{StaticResource RoundButtonStyle}">
                <SymbolIcon Symbol="Find"/>
            </Button>
        </StackPanel>
        <TextBlock x:Name="SelectedHeaderTextBlock" HorizontalAlignment="Left" Text="Unread" VerticalAlignment="Center" FontSize="26.667" TextLineBounds="Tight" Grid.Column="1" Margin="45,0,0,0"/>
        <Grid Grid.Column="1" Grid.Row="1" d:DataContext="{d:DesignData /SampleData/MainViewModelSampleData.xaml}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <WebView x:Name="webView" Grid.Column="1"/>
            <ListView ItemsSource="{Binding CurrentItems}" ItemTemplate="{StaticResource ArticleTemplate}"
                      ItemContainerStyle="{StaticResource ArticleContainerStyle}" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      Padding="18,18,0,0" ItemClick="ListView_ItemClick" IsItemClickEnabled="True"/>
        </Grid>
    </Grid>
</common:basicPage>
